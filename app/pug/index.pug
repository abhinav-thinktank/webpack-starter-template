// <script src="https://cdnjs.cloudflare.com/ajax/libs/keypress/2.1.4/keypress.min.js"></script>

script(src=require('file-loader!../assets/keypress.min.js'))

include includes/header

body
  div.wrapper
    input.display#display(type ='text', val='0')
    button.regular-key.one#1 1
    button.regular-key.two#2 2
    button.regular-key.three#3 3
    button.regular-key.four#4 4
    button.regular-key.five#5 5
    button.regular-key.six#6 6
    button.regular-key.seven#7 7
    button.regular-key.eight#8 8
    button.regular-key.nine#9 9
    button.regular-key.zero#0 0
    button.regular-key.clear#C C
    button.regular-key.slash#slash /
    button.regular-key.star#star *
    button.regular-key.minus#minus -
    button.regular-key.plus#plus +
    button.regular-key.enter#enter =
    button.regular-key.period#decimal .

  audio#sndKeyDown(src=require('file-loader!../assets/keydown.mp3'))
  audio#sndKeyUp(src=require('file-loader!../assets/keyup.mp3'))
